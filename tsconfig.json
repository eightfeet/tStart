{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"]
    },
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}